<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TbspRpgStudio.ViewModels"
        xmlns:viewModels="clr-namespace:TbspRpgStudio.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TbspRpgStudio.Views.AdventureNewWindow"
        Title="New Adventure"
        WindowStartupLocation="CenterOwner"
        x:DataType="viewModels:AdventureNewViewModel">
    
    <Design.DataContext>
        <vm:AdventureNewViewModel />
    </Design.DataContext>
    
    <Border Name="ContentBorder" BorderThickness="2">
        <Grid RowDefinitions="4*, 1*">
            <Panel Grid.Row="0">
                <Grid ColumnDefinitions="1*, 2*" RowDefinitions="Auto, Auto, Auto" Margin="25">
                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="20">Name</TextBlock>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}"></TextBox>
                    <TextBlock Grid.Row="1" Grid.Column="0" FontSize="20" Margin="0, 20">Description</TextBlock>
                    <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Height="100" Margin="0,20" Text="{Binding  Description}"></TextBox>
                    <TextBlock Grid.Row="2" Grid.Column="0" FontSize="20">Languages</TextBlock>
                    <ListBox Grid.Row="2" Grid.Column="1" x:Name="LanguagesListBox" SelectedIndex="0"
                              ItemsSource="{Binding Languages}"
                              SelectionMode="Multiple,Toggle" Height="90">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem" x:DataType="vm:LanguageViewModel">
                                <Setter Property="IsSelected"
                                        Value="{Binding IsSelected, Mode=TwoWay}"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Language.Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Panel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                <Button Margin="0, 0, 0, 0" Command="{Binding CancelAdventure}">Cancel</Button>
                <Button Name="SaveButton" Margin="0, 0, 25, 0" Command="{Binding SaveAdventure}">Save</Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
