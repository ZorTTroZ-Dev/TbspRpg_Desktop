<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TbspRpgStudio.ViewModels"
             xmlns:viewModels="clr-namespace:TbspRpgStudio.ViewModels"
             xmlns:md="https://github.com/whistyun/Markdown.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TbspRpgStudio.Views.AdventureListView"
             x:DataType="viewModels:AdventureListViewModel">
    
    <Design.DataContext>
        <vm:AdventureListViewModel/>
    </Design.DataContext>
    
    <StackPanel>
        <StackPanel Margin="0, 25, 25, 0">
            <Button HorizontalAlignment="Right" Command="{Binding AddAdventureCommand}">
                New Adventure
            </Button>
        </StackPanel>
        <StackPanel>
            <ItemsControl ItemsSource="{Binding Adventures}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="256" Margin="25">
                            <Rectangle Fill="Navy" Width="256" Height="144" />
                            <TextBlock FontSize="20" Text="{Binding Name}"/>
                            <md:MarkdownScrollViewer Height="100" Markdown="{Binding Description}"></md:MarkdownScrollViewer>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding EditAdventureCommand}">Edit</Button>
                                <Button Margin="10 0, 0, 0" Background="Firebrick">Delete</Button>    
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </StackPanel>
    
</UserControl>
